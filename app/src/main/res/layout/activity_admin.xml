<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AdminActivity">

  <ProgressBar
      android:id="@+id/progressBar_Servces"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"

      />
  <LinearLayout
      android:id="@+id/mater_new_services"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_icon_new_services"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_image_service"

        />

    <EditText
        android:id="@+id/editText_name_new_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="32dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="32dp"


        android:hint="Name de Service"
        android:inputType="text"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"


        />

    <EditText
        android:id="@+id/editText_type_new_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"

        android:hint="type de services"
        android:inputType="text"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

    <EditText

        android:id="@+id/editText_destripution_new_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"

        android:hint="destripution de services"
        android:inputType="text"

        android:paddingTop="16dp"
        android:paddingBottom="16dp">


    </EditText>

    <TextView
        android:id="@+id/erurecom_new_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:layout_marginEnd="32dp"
        android:textColor="@color/rouge"

        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_new_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"

        android:background="@drawable/btn_background"
        android:enabled="false"
        android:paddingTop="5dp"

        android:paddingBottom="5dp"
        android:text="Creat Servces"
        android:textColor="@color/status_text_color"

        android:textSize="12sp"></Button>


  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

