<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SignInActivity">



    <ProgressBar
        android:id="@+id/progressBarsign_in"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/mater_sign_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView_icon_sign_in"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@mipmap/ic_sinup_12"

            ></ImageView>


        <EditText
            android:id="@+id/editText_email_sign_in1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="32dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="32dp"

            android:hint="Phone Number or Email"
            android:inputType="textEmailAddress"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"></EditText>

        <EditText

            android:id="@+id/editText_password_sign_in1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"

            android:hint="Password"
            android:inputType="textPassword"

            android:paddingTop="16dp"
            android:paddingBottom="16dp">


        </EditText>

        <TextView
            android:id="@+id/erurecom_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:layout_marginEnd="32dp"
            android:textColor="@color/rouge"

            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_sign_in1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"

            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"

            android:background="@drawable/btn_background2"
            android:enabled="false"
            android:paddingTop="5dp"

            android:paddingBottom="5dp"
            android:text="Sign in"
            android:textColor="@color/status_text_color"

            android:textSize="12sp"></Button>

        <Button
            android:id="@+id/btn_sign_inregister"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"

            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/vert"
            android:paddingTop="10dp"

            android:paddingBottom="10dp"
            android:text="create new account"
            android:textColor="@color/status_text_color"
            android:textSize="12sp"


            ></Button>

        <TextView
            android:id="@+id/fb_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"

            android:layout_marginEnd="32dp"
            android:text="You will not be creating a Facebook Profile"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="forget password"

            android:textSize="16sp"
            android:textStyle="bold"

            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>